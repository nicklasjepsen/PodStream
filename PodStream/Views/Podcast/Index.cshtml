@model PodStream.Models.Podcast

@{
    ViewBag.Title = "Podcast Feed";
}

<h3>Vælg en kanal og et program</h3>

<div class="row">
    <div class="col-md-3">
        @Html.DropDownListFor(x => x.SelectedChannel, new SelectList(Model.AvailableChannels, "Value", "Text"), "Vælg kanal", new {@class = "form-control"})
    </div>
    <div class="col-md-3">
        @Html.DropDownListFor(x => x.SelectedShow, new SelectList(Model.AvailableShows, "Value", "Text"), "Vælg program", new {@class = "form-control"})
    </div>
</div>

<div class="row">
    <div class="col-md-4">


    </div>
    <div class="col-md-4">


    </div>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-12">
        <table id="feedItemsTable" class="table"></table>
    </div>
</div>

<script type="text/javascript">
    $(initTable = function () {
        $("#feedItemsTable").html('<thead><tr><th class="col-md-1">Afspil</th><th class="col-md-8">Beskrivelse</th><th class="col-md-1">Varighed</th><th class="col-md-1">Størrelse</th><th class="col-md-1">Udgivet</th></tr></thead><tbody></tbody>');
    });

    $(function () {
        $("#SelectedChannel").change(function () {
            initTable();
            var val = $(this).val();
            var subItems = "";
            $.getJSON("@Url.Action("GetShows","Podcast")", { name: val }, function (data) {
                $.each(data, function (index, item) {
                    subItems += "<option value='" + item.Value + "'>" + item.Text + "</option>";
                });
                $("#SelectedShow").html(subItems);
            });
        });
    });

    $(function () {
        $("#SelectedShow").change(function () {
            var val = $(this).val();
            initTable();
            var tableBody;
            $.getJSON("@Url.Action("GetFeedItems","Podcast")", { feedUrl: val }, function (data) {
                $.each(data.FeedItems, function (index, item) {
                    tableBody += '<tr><td><div class="text-center"><a href="';
                    tableBody += item.Url;
                    tableBody += '" target="_blank"><i style="font-size: 1.5em;" class="text-center success glyphicon glyphicon-play-circle"></i></a></div></td><td>';
                    tableBody += item.Summary;
                    tableBody += '</td><td class="text-right">';
                    tableBody += item.Duration;
                    tableBody += '</td><td class="text-right">';
                    tableBody += item.Size;
                    tableBody += '</td><td class="text-right">';
                    tableBody += item.PublishDate;
                    tableBody += '</td></tr>';
                });

                $('#feedItemsTable tbody').html(tableBody);

            });
        });
    });
</script>
