@model List<PodStream.Models.FeedItem>

@{
    ViewBag.Title = "Podcast Feed";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@foreach (var item in Model)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => item.PublishDate)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank">Afspil</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
        </tr>
    </table>
}

